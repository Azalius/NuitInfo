<script type="text/javascript">
    $('#jour').change(function () {
        if (this.checked) {
            $("body").addClass('n-body');
            $(".card").addClass('n-card');
        } else {
            $("body").removeClass('n-body');
            $(".card").removeClass('n-card');
        }
    });
</script>
<script type="text/javascript">
    function blink(ob) {
        if (ob.style.visibility == "visible") {
            ob.style.visibility = "hidden";
        } else {
            ob.style.visibility = "visible";
        }
    }

    setInterval("blink(bl)", 500);
</script>
